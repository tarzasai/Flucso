<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="6dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/img_like_from"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="@string/empty_text"
            android:src="@drawable/nomugshot" />

        <TextView
            android:id="@+id/txt_like_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:drawableStart="@drawable/entry_private"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/test_username"
            android:textColor="@color/entry_name_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_like_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_time_1"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_like_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/empty_text" />

</RelativeLayout>
