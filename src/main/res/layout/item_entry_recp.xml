<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingTop="6dp" >

    <ImageView
        android:id="@+id/img_to"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/empty_text"
        android:src="@drawable/nomugshot_medium" />

    <TextView
        android:id="@+id/txt_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/entry_private"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/test_username"
        android:textColor="@color/entry_name_text"
        android:textStyle="bold" />

</LinearLayout>
